<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Bitso" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/systemBackground</item>
        <item name="android:statusBarColor" tools:targetApi="23">@color/systemFill</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/lightStatusBar</item>

        <item name="android:navigationBarColor" tools:targetApi="o_mr1">@color/systemFill</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">@bool/lightStatusBar
        </item>
    </style>

    <style name="Bitso.TextAppearance">
        <item name="android:textColor">@color/label</item>
    </style>

    <style name="Bitso.TextAppearance.Subhead">
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Bitso.TextAppearance.FootNote">
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Bitso.TextAppearance.FootNote.Book">
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

</resources>
